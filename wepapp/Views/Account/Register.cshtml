@{
    ViewData["Title"] = "Register";
    Layout = "_BlankLayout";
}

<h2 class="text-center">Đăng Ký</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="login-form">
    <form method="post">
        <div class="form-group">
            <label for="Username">Tên đăng nhập</label>
            <input class="au-input au-input--full" type="text" name="Username" placeholder="Tên đăng nhập" required />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input class="au-input au-input--full" type="email" name="Email" placeholder="Nhập Email" required />
        </div>
        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input class="au-input au-input--full" type="password" name="Password" placeholder="Nhập mật khẩu" required />
        </div>
        <div class="login-checkbox">
            <label>
                <input type="checkbox" name="remember">Đồng ý với các điều khoản
            </label>
        </div>
        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Đăng ký</button>
    </form>
    <div class="register-link">
        <p>
            Bạn đã có tài khoản?
            <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a>
        </p>
    </div>
</div>